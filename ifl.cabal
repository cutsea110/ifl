build-type:          Simple
extra-source-files:  CHANGELOG.md

library
  exposed-modules:     Iseq
                       Language
                       Parser
                       Utils
                       Heap
                       Stack
                       Template.MultMachine
                       Template.Mark1
                       Template.Mark2
                       Template.Mark3
                       Template.Mark4
  -- other-modules:
  -- other-extensions:
  build-depends:       base >=4.13 && <4.16
  hs-source-dirs:      src
  default-language:    Haskell2010

executable ifl
  main-is:             Main.hs
  -- other-modules:    MyLib
  -- other-extensions:
  build-depends:       base >=4.13 && <4.16, ifl
  hs-source-dirs:      app
  default-language:    Haskell2010

test-suite ifl-doctest
  type: exitcode-stdio-1.0
  main-is: doctests.hs
  other-modules:
  hs-source-dirs:
      test
  build-depends:
      base >=4.7 && <5
    , doctest
    , directory
    , filepath
    , ifl
    , main-tester
  default-language: Haskell2010
